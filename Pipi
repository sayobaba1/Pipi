local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()

-- AYARLANABİLİR KEY
local validKeys = {
    "hitler-sama",
    "sayohub123"
}

local userHasKey = false

-- KEY İSTEME ARAYÜZÜ
OrionLib:MakeNotification({
	Name = "SayoHub Key System",
	Content = "Devam etmek için doğru anahtarı gir",
	Image = "rbxassetid://4483345998",
	Time = 5
})

OrionLib:Init()

-- KEY GİRİŞ PENCERESİ
local KeyWindow = OrionLib:MakeWindow({Name = "SayoHub | Key System", HidePremium = false, SaveConfig = false})

local KeyTab = KeyWindow:MakeTab({
	Name = "Key Girişi",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

KeyTab:AddTextbox({
	Name = "Anahtarı Girin",
	Default = "",
	TextDisappear = false,
	Callback = function(input)
		for _, key in pairs(validKeys) do
			if input == key then
				userHasKey = true
				OrionLib:MakeNotification({
					Name = "Başarılı",
					Content = "Doğru anahtar girildi!",
					Image = "rbxassetid://4483345998",
					Time = 4
				})
				wait(1)
				loadMainUI() -- Ana GUI'yi başlat
				break
			end
		end

		if not userHasKey then
			OrionLib:MakeNotification({
				Name = "Hatalı",
				Content = "Geçersiz anahtar!",
				Image = "rbxassetid://4483345998",
				Time = 4
			})
		end
	end
})

-- ASIL GUI BURADA TANIMLANIYOR
function loadMainUI()
	local MainWindow = OrionLib:MakeWindow({Name = "SayoHub", HidePremium = false, SaveConfig = true, ConfigFolder = "SayoHub"})

	local PlayerTab = MainWindow:MakeTab({
		Name = "Player",
		Icon = "rbxassetid://4483362458",
		PremiumOnly = false
	})

	PlayerTab:AddButton({
		Name = "WalkSpeed 100",
		Callback = function()
			game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 100
		end
	})

	PlayerTab:AddSlider({
		Name = "Dash Length",
		Min = 10,
		Max = 1000,
		Default = 10,
		Increment = 1,
		ValueName = "Length",
		Callback = function(Value)
			game.Players.LocalPlayer.Character:SetAttribute("DashLength", Value)
		end
	})

	PlayerTab:AddButton({
		Name = "JumpPower 100",
		Callback = function()
			game.Players.LocalPlayer.Character.Humanoid.JumpHeight = 100
		end
	})
end

-- Rayfield Kütüphanesini Yükle
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Key doğrulama
local key = "hitler-sama"
local keyValid = false

-- Anahtar doğrulama fonksiyonu
local function checkKey()
    -- Anahtar doğrulama penceresi oluştur
    local KeyWindow = Rayfield:CreateWindow({
        Name = "SayoHub Key Verification",
        Icon = 0,
        LoadingTitle = "Key Verification",
        LoadingSubtitle = "Please enter your key.",
        Theme = "Default"
    })

    -- Anahtar girme kısmı
    local KeyTab = KeyWindow:CreateTab("Key")
    KeyTab:CreateTextbox({
        Name = "Enter Key",
        PlaceholderText = "Enter key here...",
        TextChanged = function(input)
            if input == key then
                keyValid = true
                Rayfield:CreateNotification("Key Verified", "The key is valid! Welcome to SayoHub.", 5)
                KeyWindow:Destroy()  -- Key penceresini kapat
                createPlayerTab()  -- Player sekmesini oluştur
            else
                Rayfield:CreateNotification("Invalid Key", "The key you entered is incorrect.", 5)
            end
        end
    })

    KeyWindow:Init()  -- Anahtar doğrulama penceresini başlat
end

-- Player sekmesini oluştur
local function createPlayerTab()
    -- Ana pencerede Player sekmesini oluştur
    local Window = Rayfield:CreateWindow({
        Name = "SayoHub",
        Icon = 0,
        LoadingTitle = "Welcome SayoHub",
        LoadingSubtitle = "by SayoBaba",
        Theme = "Default"
    })

    local PlayerTab = Window:CreateTab("Player")  -- Player sekmesi

    -- Yürüme hızı için slider ekle
    PlayerTab:CreateSlider({
        Name = "Walk Speed",
        Range = {16, 500},  -- Minimum 16, Maksimum 500 (veya istediğiniz hız aralığını ayarlayın)
        Increment = 1,
        Suffix = "Speed",
        CurrentValue = 16,  -- Başlangıç değeri
        Flag = "WalkSpeed",  -- Kaydetme için flag
        Callback = function(value)
            game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = value  -- Yürüme hızını ayarla
        end
    })

    -- Zıplama yüksekliği butonu ekle
    PlayerTab:CreateButton({
        Name = "Set Jump Power to 100",
        Callback = function()
            game.Players.LocalPlayer.Character.Humanoid.JumpHeight = 100  -- Zıplama yüksekliğini ayarla
        end
    })

    -- UI'yi başlat
    Window:Init()
end

-- Key doğrulama işlemini başlat
checkKey()

-- Orion Library'yi Yükle
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()

-- Geçerli bir Key
local key = "hitler-sama" -- Buraya geçerli anahtarınızı yazın

-- Key doğrulama
local keyValid = false

-- Anahtar kontrol fonksiyonu
local function checkKey()
    -- Anahtar doğrulama UI'yi göster
    local inputKey = OrionLib:MakeWindow({
        Name = "Key Verification",
        HidePremium = true,
        IntroEnabled = false
    })

    -- TextBox ile anahtar girilmesini sağla
    local Section = inputKey:NewSection("Enter Key")

    Section:NewTextBox("Enter Key", "Enter your key to use this script", function(input)
        if input == key then
            keyValid = true
            -- Doğru anahtar girildiyse UI'yi aç
            OrionLib:CreateNotification({
                Name = "Key Valid",
                Content = "Your key is valid! Welcome!",
                Time = 5
            })
            inputKey:Destroy() -- Anahtar doğrulama penceresini kapat
            createMainUI()  -- Ana UI'yi oluştur
        else
            -- Yanlış anahtar girildiğinde bildirim göster
            OrionLib:CreateNotification({
                Name = "Key Invalid",
                Content = "The key is invalid. Try again.",
                Time = 5
            })
        end
    end)
end

-- Ana UI'yi oluştur
local function createMainUI()
    local Window = OrionLib:MakeWindow({
        Name = "SayoHub",
        HidePremium = false,
        IntroEnabled = true,
        IntroText = "Welcome SayoHub",
        SaveConfig = true,
        ConfigFolder = "SayoHub",
        ConfigFile = "SayoHubConfig",
    })

    -- "Player" sekmesini oluştur
    local PlayerTab = Window:NewTab("Player")

    -- "Player" sekmesine bir bölüm ekle
    local Section = PlayerTab:NewSection("Player Controls")

    -- "Set Walk Speed" butonunu oluştur
    Section:NewButton("Set Walk Speed 100", "Set your walkspeed to 100", function()
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 100
    end)

    -- Dash length için bir slider ekle
    Section:NewSlider("Dash Length", "Set the dash length", 1000, 10, function(Value)
        game.Players.LocalPlayer.Character:SetAttribute("DashLength", Value)
    end)

    -- "Set Jump Power" butonunu oluştur
    Section:NewButton("Set Jump Power 100", "Set your jump power to 100", function()
        game.Players.LocalPlayer.Character.Humanoid.JumpHeight = 100
    end)

    -- UI'yi başlat
    OrionLib:Init()
end

-- Eğer key geçerli değilse, doğrulama fonksiyonunu başlat
if not keyValid then
    checkKey()
end
